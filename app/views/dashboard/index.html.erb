<div class="jumbotron">
	<h1>Workout Lounge</h1>
	<p>Share your workouts with your friends and family.</p>
</div>

<div class="row">
	<div class="col-md-10">
		<h2>List of Members</h2>
		<%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
	</div>
</div>

<div class="row">
	<% @athletes.each do |athlete| %>
		<div class="col-md-10">
			<div class="well member">
				<%= athlete.full_name %>
				<% if user_signed_in? %>
					<%= link_to "Follow", friendships_path(friend_id: athlete.id), 
												method: :post, 
											  class: "btn btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>	
				<% end %>
			</div>
		</div>
	<% end %>
</div>
