<div class="row search-result">
	<% @athletes.each do |athlete| %>
		<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
			<div class="well member">
				<%= athlete.full_name %>
				<% if user_signed_in? %>
					<%= link_to "Follow", friendships_path(friend_id: athlete.id), 
												method: :post, 
											  class: "btn btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>	
				<% end %>

			</div>
		</div>
	<% end %>
</div>

<div class="text-center">
	<%= will_paginate @athletes, renderer: BootstrapPagination::Rails %>
</div>
