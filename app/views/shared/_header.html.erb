					<% else %>
						<div class="navbar-right">
							<p class="navbar-text">Signed in as <%= current_user.email %></p>
						</div>
						<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
