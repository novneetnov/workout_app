<div class="container">
	<% flash.each do |name, msg| %>
		<div class="alert alert-dismissible alert-<%= "#{name}" %>" role="alert">
			<a href="#" class="close" data-dismiss="alert" aria-label="Close">&times;</a>
			<%= content_tag :div, msg, id: "flash_#{name}" if msg.is_a?(String) %>
		</div>
	<% end %>
	<%= yield %>
</div>

