<h2 class="text-center">Log in</h2><br>

<div class="row">
	<div class="col-md-12">
		<%= form_for(resource, as: resource_name, 
													 url: session_path(resource_name), 
													 html: {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-3 col-sm-3">
					<%= f.label :email %><br />
				</div>
				<div class="col-md-6 col-sm-6">
					<%= f.email_field :email, autofocus: true, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-md-3 col-sm-3">
					<%= f.label :password %><br />
				</div>
				<div class="col-md-6 col-sm-6">
					<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
				</div>
			</div>

			<% if devise_mapping.rememberable? -%>
				<div class="form-group">
					<div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
						<%= f.check_box :remember_me %>
						<span>&nbsp</span>
						<%= f.label :remember_me %>
					</div>
				</div>
			<% end %>

			<div class="form-group">
				<div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
					<%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>

		<div class="form-group">
			<div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
				
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
<br>

<h3 class="text-center">
	<span class="label label-danger">
		Note: Login for testing purposes: [Email: "warren@example.com", Password: "password"]
	</span>
</h3>
